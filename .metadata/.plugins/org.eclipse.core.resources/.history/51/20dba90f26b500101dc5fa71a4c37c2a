package game;

//1. 클래스(설계도) 선언
public class RockPaperScissors {
	int win, lose, draw, user, computer;
	Scanner sc = new Scanner(System.in);

	public void start() {

		System.out.println("가위바위보 게임 시작!");

		// 승/패/무승부 카운터 초기화
		win = 0;
		lose = 0;
		draw = 0;

		while (true) {

			// 사용자 입력
			userInput2();

			// 0이면 종료
			if (user == 0) {
				System.out.println("게임종료");
				break;
			}

			// 컴퓨터의 선택 생성
			computerChoice();

			// 승패 판정 로직
			winOrLoseDecision();

			// 현재 전적 출력
			printRecord();
		}

		// 결과 출력
		printResult();
	}
}
