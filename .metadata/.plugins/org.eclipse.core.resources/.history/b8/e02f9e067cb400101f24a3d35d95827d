package day1;

public class 가위바위보 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int user;
		int computer;
		//반복문
		while(true) {
			//메뉴출력
			System.out.println("1가위 2바위 3보 0종료");
			
			//사용자 값을 입력받고
			user = scanner.nextInt();
			
			//0이면 종료
			if(user == 0) break; //아예 반복문 밑으로 나가버림
			
			//1~3이 아니면 다시 입력
			if(user>3) continue; //올라가서 다시실행
			
			computer = (int)(Math.random()*3); 
			
			if ( user == 1) {
				if( user == computer) {
					System.out.println("무승부");
					continue;
				} else if ( computer == 2) {
					System.out.println("승리");
					continue;
				}else if ( computer == 3) {
					System.out.println("패배");
					continue;
				}
			}
			
			if ( user == 2) {
				if( user == computer) {
					System.out.println("무승부");
					continue;
				} else if ( computer == 1) {
					System.out.println("승리");
					continue;
				}else if ( computer == 3) {
					System.out.println("패배");
					continue;
				}
			}
			
			if ( user == 3) {
				if( user == computer) {
					System.out.println("무승부");
					continue;
				} else if ( computer == 1) {
					System.out.println("패배");
					continue;
				}else if ( computer == 2) {
					System.out.println("승리");
					continue;
				}
			}
	}
}
}