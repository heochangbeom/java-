package day1;

import java.util.Scanner;

public class 숫자맞추기 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int user;
		int computer;
		int winCnt = 0;
		int drawCnt = 0;
		int loseCnt = 0;
		String restart;
		
		//반복문
		while(true) {
			//메뉴출력
			System.out.println("숫자를 입력해 주십시오");
			
			//사용자 값을 입력받고
			user = scanner.nextInt();
			
			computer = (int)(Math.random()*100) + 1;
			
			if ( user < computer ) {
				System.out.println("up!");
				drawCnt++;
				continue;
			}
			
			if ( user > computer) {
				System.out.println("down!");
				loseCnt++;
				continue;
			}
			
			if ( user == computer) {
				System.out.println("정답입니다!\n다시시작하시겠습니까?");
				winCnt++;
				if()
				continue;
				
			}
			
		
	}
} //main
} //class